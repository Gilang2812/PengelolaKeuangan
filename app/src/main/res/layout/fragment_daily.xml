<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/listName"
            android:text="30"
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage11"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"

            android:layout_toEndOf="@id/listName"
            />


        <TextView
            android:id="@+id/listpem"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/listName"
            android:text="pemasukan"
            android:textColor="@color/color_pemasukan_number"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="@font/poppinsmedium"
            />

        <TextView
            android:id="@+id/listpeng"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/listpem"
            android:text="pengeluaran"
            android:textColor="#FA6900"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsmedium"/>

        <ImageView android:id="@+id/line_1"

            android:contentDescription="line_1"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="1dp"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_below="@id/listName"/>

        <TextView
            android:id="@+id/listkategori"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/line_1"
            android:text="Makanan"
            android:textColor="#5E5E5E"
            android:textSize="9sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/listImage"
            android:fontFamily="@font/poppinslight"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/line_1"/>

        <TextView
            android:id="@+id/listbayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/line_1"
            android:text="Tunai"
            android:textColor="#5E5E5E"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/listkategori"
            android:fontFamily="@font/poppinsmedium"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>