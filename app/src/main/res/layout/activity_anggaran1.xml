<!-- activity_anggaran1.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anggaran1Activity">

  <!-- Header with buttons for transaction, budget, more, profile -->
  <LinearLayout
      android:id="@+id/headerLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="16dp">

    <!-- Transaction Button -->
    <Button
        android:id="@+id/btnTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Transaction" />

    <!-- Budget Button -->
    <Button
        android:id="@+id/btnBudget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Budget" />

    <!-- More Button -->
    <Button
        android:id="@+id/btnMore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="More" />

    <!-- Profile Button -->
    <Button
        android:id="@+id/btnProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Profile" />

  </LinearLayout>

  <!-- Content Section -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/headerLayout"
      android:orientation="vertical"
      android:padding="16dp">

    <!-- Your budget management UI components go here -->

  </LinearLayout>

</RelativeLayout>
